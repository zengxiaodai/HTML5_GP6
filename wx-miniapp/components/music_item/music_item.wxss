.music {
    width: 100%;
    height: 250rpx;
    box-sizing: border-box;
    background-color: white;
    padding: 30rpx;
    display: flex;
    padding-bottom: 0;
}
.music .left {
    flex: 440;
    height: 100%;
    border-bottom: 2rpx solid #DDDDDD;
    box-sizing: border-box;
}
.left .label {
    display: inline-block;
    width: 80rpx;
    height: 34rpx;
    border-radius: 6rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    color: white;
    text-align: center;
}
.music .right {
    flex: 250;
}
.right image {
    display: block;
    width: 230rpx;
    height: 190rpx;
    margin-left: 20rpx;
}
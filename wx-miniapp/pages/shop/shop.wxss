.header {
    background-color: rgba(255, 206, 75, 1);
    height: 300rpx;
    width: 100%;
    box-sizing: border-box;
    /* padding-top: 60rpx; */
    padding-left: 30rpx;
}
.pos {
    line-height: 40rpx;
    vertical-align: middle;
}
.pos image {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    margin-right: 5rpx;
}
.pos button {
    display: inline;
    background: transparent;
    font-weight: 400;
    padding: 0;
    font-size: 28rpx;
}

.shop-list {
    background-color: rgba(250, 250, 250, 1);
    margin-top: -80rpx;
    height: 1000rpx;
    border-top-left-radius: 40rpx;
    border-top-right-radius: 40rpx;
    /* padding-top: 50rpx; */
}
.shopx {
    padding: 50rpx;
    background-color: white;
    margin-top: 10rpx;
    display: flex;
    height: 200rpx;
    margin-bottom: 15rpx;
}
.shopx .left {
    flex: 200;
}
.left image {
    display: block;
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.shopx .right {
    flex: 490;
    padding-left: 30rpx;
    position: relative;
}
.right .name {
    font-weight: bold;
}
.right .dis {
    position: absolute;
    bottom: 0;
    right: 0;
}
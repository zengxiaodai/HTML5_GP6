}
.abbi-list .row {
    background-color: white;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 16rpx;
    width: 690rpx;
    box-sizing: border-box;
    margin: 0 auto;
    padding: 0 30rpx;
    /* overflow: hidden; */
    margin-top: 20rpx;
}
.abbi-list .row button {
    background-color: transparent;
    padding: 0;
    margin: 0;
    /* display: inline-block; */
    float: right;
    line-height: 100rpx;
    color: #dddddd;
    text-align: right;
}
